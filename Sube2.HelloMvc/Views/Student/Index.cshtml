@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Öğrenci İşlemleri";
}

<div class="container mt-5 text-area">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Öğrenci İşlemleri</h2>
            <a asp-action="AddStudent" asp-controller="Student" class="btn btn-outline-primary mb-3">Öğrenci Ekle</a>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Numara</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Numara</td>
                            <td>@item.Ad</td>
                            <td>@item.Soyad</td>
                            <td>
                                <a class="btn btn-sm btn-outline-success" href="/Student/EditStudent/@item.Ogrenciid">Düzenle</a>
                                <a onclick="return confirm('Emin Misiniz?')" class="btn btn-sm btn-outline-danger" href="/Student/DeleteStudent/@item.Ogrenciid">Sil</a>
                                <a class="btn btn-sm btn-outline-secondary" href="/LessonRegistration/AddLessonRegistration/@item.Ogrenciid">Ders Ekle</a>
                                <a asp-action="StudentLessons" asp-controller="Student" asp-route-studentId="@item.Ogrenciid" class="btn btn-sm btn-outline-primary">Aldığı Dersler</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
